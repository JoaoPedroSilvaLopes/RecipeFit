{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compileOnSave": false,
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@recipefit/assets": ["libs/shared/assets/index.ts"],
      "@recipefit/components": ["libs/shared/components/index.ts"],
      "@recipefit/domain-types": ["libs/shared/domain-types/index.ts"],
      "@recipefit/services": ["libs/shared/services/index.ts"],
      "@recipefit/styles": ["libs/shared/styles/index.ts"],
      "@recipefit/modules/outros": ["libs/modules/outros/index.ts"],
      "@recipefit/modules/authentication": ["libs/modules/authentication/login-page/pages/index.ts"],
      "@recipefit/modules/exercicio": ["libs/modules/exercicio/index.ts"],
      "@recipefit/modules/alimentacao": ["libs/modules/alimentacao/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
